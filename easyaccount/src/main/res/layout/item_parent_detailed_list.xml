<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingRight="15dp"
    android:background="#2000">
    <TextView
        android:id="@+id/month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="04"
        style="@style/Text_month_detail_list"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="月"
        android:layout_toRightOf="@id/month"
        style="@style/Text_title_frag"
        android:textSize="16sp"
        android:layout_alignBottom="@id/month"
        android:layout_marginLeft="3dp"
        android:layout_marginBottom="3dp"
        />
    <TextView
        android:id="@+id/date_of_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="04.01-04.31"
        android:layout_below="@id/month"
        style="@style/Text_subtitle_frag"
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        />
    <!--中间部分-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/date_of_month"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收 2500.00"
            style="@style/Text_income_detail_list"
            android:layout_marginBottom="5dp"
            />
        <TextView
            android:id="@+id/expend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支 3882.10"
            style="@style/Text_expend_detail_list"
            />
    </LinearLayout>
        />
    <!--右侧部分-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="right"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="余"
            style="@style/Text_subtitle_frag"
            />
        <TextView
            android:id="@+id/balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-2851.10"
            style="@style/Text_fee_detail_list"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#4000"/>

</RelativeLayout>